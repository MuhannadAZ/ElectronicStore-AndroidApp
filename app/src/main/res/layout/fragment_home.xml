<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Happy to have you with us!"
            android:textColor="@color/lavender"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Promotional Banner Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/socialmedia"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"/>

        <!-- WebView or Video Section -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"/>

        <!-- Promotional Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Check out our brand new ready-to-go PC! Get yours today!"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Features Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="• High-quality PC parts at affordable prices.\n\n• Custom-built PCs to match your needs.\n\n• Expert support every step of the way."
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"
            android:gravity="start"/>

        <!-- Call to Action Button -->
        <Button
            android:id="@+id/buyNowButton"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#8426C4"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:text="Buy Now"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
